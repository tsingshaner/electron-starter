{
  "name": "electron-template",
  "version": "1.0.0",
  "license": "ISC",
  "description": "An Electron application with React and TypeScript",
  "main": "./out/main/index.js",
  "scripts": {
    "format": "biome format --fix .",
    "lint": "biome check --fix && eslint . --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "pnpm typecheck:node && pnpm typecheck:web",
    "start": "electron-vite preview",
    "test": "echo test",
    "dev": "electron-vite dev",
    "build": "pnpm typecheck && electron-vite build",
    "prepare": "simple-git-hooks",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "pnpm build && electron-builder --dir",
    "build:win": "pnpm build && electron-builder --win",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "electron-updater": "^6.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@eslint/js": "^9.8.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.1.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "electron": "^31.3.1",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.3.0",
    "eslint": "^9.8.0",
    "eslint-plugin-react": "^7.35.0",
    "lint-staged": "^15.2.8",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.0.1",
    "vite": "^5.4.0"
  },
  "lint-staged": {
    "*.{js,jsx,cjs,mjs,ts,tsx,cts,mts}": ["pnpm lint"]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "pre-push": "pnpm test"
  }
}
